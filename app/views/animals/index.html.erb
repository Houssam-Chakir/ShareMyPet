<%= render "layouts/navbar" %>
<div class="card p-3">
<h3>Add a new animal:</h3>
<%= link_to "New animal", new_animal_path, class: "btn btn-success" %>

<div class="inline-container p-3">
  <%#= cl_image_tag("fighter jet", width: 400, height: 300, crop: :fill) %>

  <div class="cards-container">
    <div class="map-card barbarian btns search-form flex search-btns">
      <div class="inline-container map-container"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="pk.eyJ1IjoiamloYW5lamlpaSIsImEiOiJjbDhnM2Q4eXowM2Y0M3BwMmM0cGV2a2YzIn0.q-DEG9fibQC0mzodxg2NNQ">
      </div>
      <div class="inline-container search-container ">
        <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :name, input_html: {value: ""}, class: "search-bar" %>
          <%= f.input :category, collection:['Cat','Dog','Batrachian','Dinosaure','Other'], class: "search-bar" %>
          <%= f.input :specie, class: "search-bar" %>



          <%= f.submit "Search", class: "search-btn search-btn-main" %>
        <% end %>
      </div>
    </div>
    <% @animals.each do |animal| %>
      <div class="slide-container">
        <%# <div class="wrapper"> %>
          <div class="clash-card barbarian btns">
            <div class="clash-card__image clash-card__image--barbarian">
              <img src="<%=animal.photo%>" alt="barbarian" />
            </div>
            <div class="clash-card__level clash-card__level--barbarian"><%= animal.specie %></div>
            <div class="clash-card__unit-name"><%= animal.name %></div>
            <div class="clash-card__unit-description">
              <%= animal.bio %>
            </div>
            <%= link_to "More about", animal_path(animal.id), class: "bttn btn-main" %>
          </div>
        <%# </div> %>
      </div>
    <% end %>
  </div>
</div>
